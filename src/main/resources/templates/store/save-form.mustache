{{>layout/header}}
        <div class="container bg-light text-dark mt-5 p-5 rounded">
            <h1 class="text-dark">상품등록</h1>
            <form action="/store/save" method="post">
                <div class="mb-3 mt-3">
                    <input
                        type="text"
                        class="form-control"
                        placeholder="상품명"
                        name="name"
                        value="오렌지"
                        required
                    />
                </div>
                <div class="mb-3">
                    <input
                        type="number"
                        class="form-control"
                        placeholder="재고"
                        name="stock"
                        value="40"
                        required
                    />
                </div>
                <div class="mb-3">
                    <input
                        type="number"
                        class="form-control"
                        placeholder="가격"
                        name="price"
                        value="4000"
                        required
                    />
                </div>
                <button class="btn btn-primary">등록</button>
            </form>
        </div>
{{>layout/footer}}
